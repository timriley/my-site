#!/usr/bin/env ruby

require "fileutils"
require "optparse"
require "bundler/setup"
require "hanami/boot"

options = {
  assets: true,
  clean: true,
}

OptionParser.new do |opts|
  opts.banner = "Usage: example.rb [options]"

  opts.on("--[no-]clean", "Clean build directory") do |v|
    options[:clean] = v
  end

  opts.on("--[no-]assets", "Build assets") do |v|
    options[:assets] = v
  end
end.parse!

if options[:clean]
  export_dir = Hanami.app.root.join(Hanami.app["settings"].export_dir)
  FileUtils.rm_rf(export_dir, secure: true)
  FileUtils.mkdir_p(export_dir)
end

if options[:assets]
  # command = "bundle exec hanami assets compile"
  command = "npm run assets"
  system(command, in: $stdin, out: $stdout, err: $stderr)
end

Site::App.build
